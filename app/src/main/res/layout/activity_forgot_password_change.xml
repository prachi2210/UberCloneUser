<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/_10sdp"
    tools:context=".ui.auth.forgotpassword.CreateNewPasswordActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60" />





    <include
        android:id="@+id/include_action_bar"
        layout="@layout/forgot_password_header" />


    <TextView

        android:id="@+id/tv_pass_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingStart="10dp"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="start"
        android:text="Enter new Password"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_action_bar" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_editext"
        android:layout_marginTop="30dp"
        android:paddingStart="10dp"
        android:layout_marginEnd="@dimen/_10sdp"

        android:paddingEnd="10dp"
        android:paddingTop="12dp"
        android:fontFamily="@font/poppins"
        android:elevation="3dp"
        android:textColor="@color/text_blue"
        android:textColorHint="@color/text_blue"
        android:paddingBottom="12dp"
        android:imeOptions="actionNext"
        android:hint="@string/password"
        app:layout_constraintStart_toStartOf="@+id/include_action_bar"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/tv_pass_desc"



        />


    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_editext"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="12dp"

        android:fontFamily="@font/poppins"
        android:elevation="3dp"
        android:textColor="@color/text_blue"
        android:textColorHint="@color/text_blue"
        android:paddingBottom="12dp"
        android:imeOptions="actionNext"
        android:hint="@string/confirm_password"
        app:layout_constraintStart_toStartOf="@+id/include_action_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password"



        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_done"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/curve_button"
        android:text="Done"
        android:layout_marginEnd="@dimen/_10sdp"
        android:onClick="onClick"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@+id/et_confirm_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintWidth_percent="0.95" />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/ic_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignUpActivity">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="30dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="14sp"
            android:background="@drawable/drawable_editext"
            android:elevation="3dp"
            android:fontFamily="@font/poppins"
            android:hint="@string/name"
            android:imeOptions="actionNext"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/text_blue"
            android:textColorHint="@color/text_blue" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="14sp"
            android:background="@drawable/drawable_editext"
            android:elevation="3dp"
            android:fontFamily="@font/poppins"
            android:hint="@string/mobile_number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingTop="12dp"
            android:paddingEnd="10dp"
            android:paddingBottom="12dp"
            android:textColor="@color/text_blue"
            android:textColorHint="@color/text_blue" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="14sp"
            android:background="@drawable/drawable_editext"
            android:elevation="3dp"
            android:fontFamily="@font/poppins"
            android:hint="@string/email"
            android:paddingStart="10dp"
            android:imeOptions="actionNext"
            android:paddingTop="12dp"
            android:paddingEnd="10dp"
            android:paddingBottom="12dp"
            android:textColor="@color/text_blue"
            android:textColorHint="@color/text_blue" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/drawable_editext"
            android:elevation="3dp"
            android:fontFamily="@font/poppins"
            android:hint="@string/password"
            android:paddingStart="10dp"
            android:inputType="textPassword"
            android:paddingTop="12dp"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            android:imeOptions="actionDone"
            android:paddingBottom="12dp"
            android:textColor="@color/text_blue"
            android:textColorHint="@color/text_blue" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/blue"
            android:id="@+id/cb"
            android:gravity="center"
            android:buttonTint="@color/text_blue"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/by_clicking_here_you_agree_to_the_terms_and_conditions"
            android:fontFamily="@font/poppins"
            android:layout_toEndOf="@+id/cb"
            android:textColor="@color/text_blue"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"/>
        </RelativeLayout>



        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="@string/register"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/drawable_gradient"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:id="@+id/tv"
                android:text="@string/already_a_user"
                android:textColor="@color/text_grey" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:layout_toEndOf="@+id/tv"
                android:text="@string/log_in"
                android:onClick="onClick"

                android:layout_marginStart="10dp"
                android:textColor="@color/black" />


        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>